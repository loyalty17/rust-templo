{
    "name": "save",
    "about": "Get template from real files and folders and saves it in a repository",
    "parents": ["tp"],
    "args": {
        "inputs": [
            {
                "name": "folder-path",
                "help": "Sets the folder to extract the template",
                "required": true
            }
        ],
        "options": [
            {
                "long": "name",
                "value_name": "temp-name",
                "help": "Sets the template name"
            },
            {
                "long": "repo",
                "value_name": "repo-name",
                "help": "Sets the repository name to save the template"
            },
            {
                "long": "description",
                "value_name": "temp-desc",
                "help": "Sets the template description"
            }
        ]
    }
}